# ================================= Build stage ================================
FROM ghcr.io/astral-sh/uv:python3.12-bookworm-slim AS builder
ENV UV_COMPILE_BYTECODE=1 UV_LINK_MODE=copy 
ENV UV_PYTHON_DOWNLOADS=0

WORKDIR /app

# 1. Copy ONLY dependency files first
COPY pyproject.toml uv.lock /app/
# 2. Install dependencies
RUN --mount=type=cache,target=/root/.cache/uv \
    --mount=type=bind,source=uv.lock,target=uv.lock \
    --mount=type=bind,source=pyproject.toml,target=pyproject.toml \
    uv sync --locked --no-install-project --no-dev
# 3. Copy source code
COPY . /app
# 4. Install the project itself
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --locked --no-dev


# ================================= Final stage ================================
FROM ghcr.io/astral-sh/uv:python3.12-bookworm-slim AS final

# 1. Install System Deps FIRST
RUN apt-get update && apt-get install -y \
    git libpq5 docker.io graphviz \
    && rm -rf /var/lib/apt/lists/* 
# 2. Copy just the virtualenv from builder first to run the install
ENV PLAYWRIGHT_BROWSERS_PATH=/ms-playwright
COPY --from=builder /app/.venv /app/.venv
ENV PATH="/app/.venv/bin:$PATH"
RUN playwright install-deps && playwright install
# 3. Copy the Application Code
COPY --from=builder /app /app
# 4. Final setup
RUN chmod +x /app/entrypoint.prod.sh /app/entrypoint.dev.sh
RUN mkdir -p /app/media /app/staticfiles
ENV UV_CACHE_DIR="/home/nonroot/.cache/uv"

WORKDIR /app
EXPOSE 8000

